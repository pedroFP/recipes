<div class="row">
  <div class="d-flex flex-column flex-sm-row align-items-start align-items-sm-center justify-content-between gap-2">
    <h1 class="mb-2">
      <%= @recipe.title %>
      <% if user_signed_in? && policy(@recipe).update?  %>
        <%= link_to edit_recipe_path(@recipe), class:"fs-6 text-warning" do %>
          <i class="bi bi-pencil-square"></i>
        <% end %>
      <% end %>
    </h1>
    <%= link_to "Back", recipes_path, class: "btn btn-light mt-3" %>
  </div>
  <div class="col-md-6 col-lg-6 col-sm-12">
    <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center gap-md-3 mb-2">
      <div>
        <%= display_stars(@recipe.ratings) %>
        <%= @recipe.ratings %>
      </div>
      <span class="d-none d-md-inline">|</span>
      <div>
        <%= display_time(@recipe.total_time) %>
      </div>
      <span class="d-none d-md-inline">|</span>
      <div>
        <i class="bi bi-person-circle me-1"></i>
        <%= @recipe.author %>
      </div>
    </div>
    <div class="card">
      <img src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fwallpapers.com%2Fimages%2Fhd%2Ffood-4k-spdnpz7bhmx4kv2r.jpg&f=1&nofb=1&ipt=2898319fe61039d342308070b7c0ca205d07fd689da807f26b68be7ff43a270c" class="card-img-top" alt="...">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <p>
            <strong>Prep time:</strong>
            <%= display_time(@recipe.prep_time, icon: false) %>
          </p>
          <p>
            <strong>Cook time:</strong>
            <%= display_time(@recipe.cook_time, icon: false) %>
          </p>
          <p>
            <strong>Total time:</strong>
            <%= display_time(@recipe.total_time, icon: false) %>
          </p>
        </div>
        <div class="d-flex justify-content-between">
          <p>
            <strong>Category:</strong>
            <span class="ms-2 badge text-bg-warning"></i><%= @recipe.category %></span>
        </p>
      </div>
    </div>
  </div>
</div>
<div class="col-md-6 col-lg-6 col-sm-12">
  <h2>Ingredients</h2>
  <ul class="list-group list-group-flush">
    <% @recipe.ingredients.each do |ingredient| %>
      <li class="list-group-item"><%= ingredient %></li>
    <% end %>
  </ul>
</div>
</div>
